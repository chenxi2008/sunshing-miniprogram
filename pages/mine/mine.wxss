.top {
  width: 750rpx;
  height: 350rpx;
  background: #4166f5;
  padding-top: 80rpx;
  border-radius: 0 0 30rpx 30rpx;
}
.headimg {
  width: 150rpx;
  height: 150rpx;
  display: block;
  margin: 0 auto;
  position: relative;
  border-radius: 100%;
}
.nike {
  color: #fff;
  padding: 20rpx 0;
  text-align: center;
}
.order {
  width: 690rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  transform: translateY(-80rpx);
}
.address,.all {
  padding: 35rpx 30rpx;
  display: flex;
  box-sizing: border-box;
  align-items: center;
  width: 690rpx;
  position: relative;
  border-bottom: 1px solid #eaeaea;
  justify-content: space-between;
}
.address .arrow,.all .arrow {
  width: 18rpx;
  height: 30rpx;
}
.all view {
  display: inline-block;
}
.all::before {
  content: "";
  width: 30rpx;
  height: 10rpx;
  left: 0;
  display: block;
  bottom: -5rpx;
  background: #fff;
  position: absolute;
}
.all::after {
  content: "";
  width: 30rpx;
  height: 10rpx;
  right: 0;
  display: block;
  bottom: -5rpx;
  background: #fff;
  position: absolute;
}
.item {
  background: #fff;
}
.type {
  width: 690rpx;
  display: flex;
  padding: 30rpx;
  box-sizing: border-box;
  justify-content: space-between;
}
.type image {
  width: 45rpx;
  height: 45rpx;
}
.type > view {
  text-align: center;
  padding: 20rpx 0;
  flex: 1;
}
.type view:not(:last-child) {
  margin-right: 30rpx;
  border-right: 1px solid #eaeaea;
}
.address {
  margin: 30rpx auto;
  border-bottom: none;
}
.auth {
  color: #fff;
  background: #4166f5;
}
.button-cover {
  background: #4166f5;
}